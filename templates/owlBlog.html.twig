                            </a>

                            {#<div class="line-divider line-danger"></div>#}
                            <p>
                                {% for tag in article.categories %}
                                    {{ tag.name }}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% for article in articles[2] %}
                    <div class="card card-blog card-plain">
                        <a aria-label="Lien vers la page de l'article" class="header" href={{ path('owlBlogDisplay',{'art': article.id})}}>
                            <img alt=""  src="{{ asset('assets/img/persons/'~article.articleImage|e) }}" class="image-header">
                        </a>

                        <div class="blogTitleText">

                            <p>{{ article.date|date("m/d/Y") }}</p>

                            <a  aria-label="Lien vers la page de l'article" class="card-title" href={{ path('owlBlogDisplay',{'art': article.id})}}>

                                <h2>{{ article.title }}</h2>

                            </a>

                            {#<div class="line-divider line-danger"></div>#}
                            <p>
                                {% for tag in article.categories %}
                                    {{ tag.name }}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div id="fb-root"></div>


</div>

