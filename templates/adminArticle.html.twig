

{#----------------------------- Page formulaire d'ajout d'un organisme ---------------------------#}


{% extends 'adminBase.html.twig' %}


{% block title %}Création articles{% endblock %}

{% block content %}


    <div class="yellowBlock">
        <h1 style="padding-top:20px;margin-top:0;">Gestion des articles</h1>
    </div>

    {{ parent() }}

    <div class="articleAdmin container col-lg-8 col-lg-offset-2" style="background-color:white;padding:30px 40px;border-radius:8px;margin-top:10px;margin-bottom:40px;">


        <div>
            <a aria-label="Atteindre le formulaire création article" class="btn btn-fill btn-owl" style="margin-bottom:50px;margin-top:30px;" href={{ path('articleFormDisplay')}}>
                Ajout article
            </a>
        </div>

        {# Pour chaque article, affichage d'une div #}

        {% for article in articles %}


                <div class="articleText">

                <p>

                    <a class="glyphicon glyphicon-pencil link articleUpdate" style="margin-right:10px; margin-left:10px;" id="up{{ article.id }}" href="{{ path('articleFormDisplay',{'art':article.id}) }}"></a>
                    <span class="glyphicon glyphicon-trash link articleTrash" id="tr{{ article.id }}"></span>

                </p>

                <p>
                    {{ article.author ~ ', le ' ~ article.date|date('d/m/Y') ~ ' (modifié le ' ~ article.updateDate|date('d/m/Y') ~  ') - "' ~ article.title ~ '"' }}
                </p>


                    <p>{{ article.text|slice(0, 600)|raw }}</p>

                </div>

                <hr/>

        {% endfor %}

    </div>
    {#</div>#}
{% endblock %}


    {% block javascripts %}

        {{ parent() }}

        <script src="{{ asset('assets/js/articleAdmin.js') }}"></script>

    {% endblock %}
