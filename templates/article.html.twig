

{#----------------------------- Page formulaire d'ajout d'un organisme ---------------------------#}


{% extends 'base.html.twig' %}

{% block content %}

    {% set art = app.request.query.get("art") %}


    <div class = "article container col-lg-10 col-lg-offset-1">

        <h1>{{ article.title }}</h1>
        <p>{{ article.text|raw }}</p>
        <p>{{ article.author }} - Article créé le " {{ article.date|date("d/m/Y")}} - Modifié le " {{  article.updateDate|date("d/m/Y") }}</p>

        <div id="gerard" class="col-lg-12" style="margin-top:20px;margin-bottom:20px;">
        <div class="col-lg-6">

            <div style="background-color:#ddd;padding : 20px;">

            <p>Veuillez entrer votre commentaire (Attention ! le commentaire ne sera mis en ligne qu'une fois validé par l'administrateur !</p>

            <div class="form-group">
                <label for="commentAuthor">Auteur :</label>
                <input type="text" class="form-control" id="commentAuthor" aria-describedby="authorHelp" >
            </div>

            <div class="form-group">
                <label for="commentText">Commentaire :</label>
                <textarea class="form-control" id="commentText"></textarea>
            </div>

            <button class="btn btn-primary validButton">Soumettre</button>

            </div>

        </div>
    </div>

        <div class ="col-lg-12" style="padding-left:0px;">
            <p class ="link addComment btn btn-sm btn-primary link" style="background-color:#ddd; border-color:grey;color:#333333;">Ajouter un commentaire</p>
        </div>



        <div class = " container col-lg-12"  style="padding-left:0px;">

        {% for comment in article.comments %}

            <div>

            <div class = "container col-lg-12"  style="padding-left:0px;" id="com{{ comment.id }}">

            <p style="margin-top:20px;margin-bottom:20px;color:red;">{{ comment.text }}
                <span class="addCommentResponse btn btn-xs btn-primary link" style="background-color:#ddd; border-color:grey;color:#333333;">Répondre</span></p>

            </div>

                {% for response in comment.commentResponses %}

                    <div style="margin-top:20px;margin-bottom:20px;color:green;margin-left:30px;">
                        {{ response.text }}

                    </div>

                {% endfor %}

            </div>

        {% endfor %}

        </div>

    </div>




    <div id="robert"></div>

{% endblock %}

    {% block javascripts %}

        {{ parent() }}

        <script src="{{ asset('assets/js/article.js') }}"></script>

    {% endblock %}
