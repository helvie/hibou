{% extends 'base.html.twig' %}

{% block content %}


    <div class = "container col-lg-6 col-lg-offset-3">

        {{ form_start(form, {'attr': {'class': 'form-group'}}) }}

            {{ form_label(form.title, 'Titre :') }}
            {{ form_widget(form.title, {'attr': {'required': true, 'class' : 'form-control'}}) }}
