            {{ form_label(form.visible, 'Visible :') }}
            {{ form_widget(form.visible, {'attr': {'required': true, 'class' : 'visible'}}) }}
            {{ form_errors(form.visible) }}


        {{ form_end(form) }}

    </div>

{% endblock %}
